<h1>פוסטים אחרונים</h1>
<a href="/forum" class="back-link">← עמוד ראשי</a>

<ul class="latest-posts">
  <% posts.forEach(p => { %>
  <li class="post-item">
    <a href="/forum/thread/<%= p.id %>" class="post-title"> <%= p.title %> </a>

    <div class="meta">
      בפורום:
      <a href="/forum/f/<%= p.forum_id %>"><%= p.forum_name %></a>
      | מאת <b><%= p.author || "אנונימי" %></b>
      | <%= new Date(p.created_at).toLocaleString("he-IL", { timeZone:
      "Asia/Jerusalem" }) %> | תגובות: <%= p.reply_count %>
    </div>
  </li>
  <% }) %>
</ul>
