<h2 class="page-title">Latest Threads</h2>

<section class="threads">
  <% if (threads.length === 0) { %>
  <p class="empty">No threads yet. Be the first to start one!</p>
  <% } else { %>
  <ul class="thread-list">
    <% threads.forEach(t => { %>
    <li>
      <a class="thread-title" href="/thread/<%= t.id %>"> <%= t.title %> </a>

      <div class="meta">
        by <%= t.author || "Anonymous" %> â€” <%= t.reply_count %> replies
      </div>
    </li>
    <% }) %>
  </ul>
  <% } %>
</section>

<section class="new-thread">
  <h2>Create New Thread</h2>

  <form method="POST" action="/threads">
    <input type="text" name="title" placeholder="Thread title" required />
    <input type="text" name="author" placeholder="Your name (optional)" />
    <textarea
      name="content"
      placeholder="Write your message..."
      required
    ></textarea>

    <button>Create Thread</button>
  </form>
</section>
